@{
}
@model List<Customer>;

<form method="post" action="@Url.Action("Create", "Customer")">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name" required>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email" required>
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" class="form-control" id="address" name="address" placeholder="Enter Address" required>
    </div>
    <br /><br />
    <button type="submit" class="btn btn-danger">Submit</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Address</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.id</th>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.address</td>
               <td>
                    <a href="@Url.Action("Edit","Customer",new{id=item.id})" class="btn btn-success">Update</a>
                    <a href="@Url.Action("Delete", "Customer", new { id = item.id })" class="btn btn-danger">Delete</a>
               </td>
            </tr>
            
        }
        
       
    </tbody>
</table>