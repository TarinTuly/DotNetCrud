@model Customer
<h2>Edit Customer</h2>
<form method="post" action="@Url.Action("Edit","Customer")">
    <input type="hidden" name="id" value="@Model.id" />
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="@Model.name" readonly />
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="@Model.email" required />
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" class="form-control" id="address" name="address" value="@Model.address" required />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Update</button>

</form>